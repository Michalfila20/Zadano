

#include <iostream>
using namespace std;
int main()
{
    int n, i, temp;
    float  s = 0;
    cout << "Podaj liczbe studnetow :";
    cin >> n;
    i = n;

    while (i > 0)
    {
      
        cout << "podaj liczbe punktow: ";
        cin >> temp;
        if (temp <= 100 && temp >= 0) {
            s += temp;
            i--;
        }
        else
        {
            cout << "ZÅ‚a ilosc punktow" << endl;
        }
    };

    cout << "Srednia: " << s / n;
    
}

